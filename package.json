{
  "name": "electric-field-sim",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "node --test test/*.test.js",
    "dev:frontend": "vite --config frontend/vite.config.ts",
    "build:frontend": "vite build --config frontend/vite.config.ts",
    "test:frontend": "vitest --config frontend/vite.config.ts run",
    "lint:frontend": "eslint \"frontend/src/**/*.ts\" \"frontend/test/**/*.ts\"",
    "test:e2e": "playwright test -c frontend/playwright.config.ts",
    "quality:all": "npm run lint:frontend && npm test && npm run test:frontend && npm run test:e2e"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.20",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^10.0.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^4.0.18"
  }
}
